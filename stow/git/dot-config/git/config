[color]
    ui = auto

[core]
    editor = nvim
    autocrlf = input
    excludesfile = ~/.config/git/ignore

[init]
    defaultBranch = main

[diff]
    tool = meld

[difftool "meld"]
    cmd = meld "$LOCAL" "$REMOTE"
    prompt = false

[merge]
    tool = meld
    conflictstyle = diff3

[mergetool "meld"]
    cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
    trustExitCode = true
    prompt = false

[pull]
    rebase = false

[push]
    default = current

[gpg]
	format = ssh
[commit]
	gpgsign = true
[tag]
	gpgSign = true
[gpg "ssh"]
	allowedSignersFile = /Users/martin/.config/git/allowed_signers
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
